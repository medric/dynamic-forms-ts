{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "commonjs",
    "paths": {
      "~utils/*": ["packages/utils/*"],
      "~core/*": ["packages/core/*"],
      "~plugins/*": ["packages/plugins/*"],
      "~renderers/*": ["packages/renderers/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["packages/**/*", "bin"],
  "exclude": ["node_modules", "dist", "examples", "**/*.spec.ts"]
}
